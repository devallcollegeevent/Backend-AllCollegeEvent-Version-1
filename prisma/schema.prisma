generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @default(autoincrement())
  idnty String @unique @default(uuid())

  name  String
  isDel Boolean @default(false)

  users User[]
  orgs  Org[]
}

model User {
  id    Int    @id @default(autoincrement())
  idnty String @unique @default(uuid())

  name  String
  email String @unique
  pwd   String

  phone   String?
  city    String?
  state   String?
  country String?
  pImg    String?

  isDel Boolean @default(false)

  roleId Int?
  role   Role? @relation(fields: [roleId], references: [id])

  crAt DateTime @default(now())

  otps  OTP[]
  Event Event[]
}

model Org {
  id    Int    @id @default(autoincrement())
  idnty String @unique @default(uuid())

  domEmail String @unique
  pwd      String

  org_name String
  org_cat  String
  city     String
  state    String
  country  String
  pImg     String?
  whatsapp String?
  insta    String?
  linkedIn String?

  evCnt  Int     @default(0)
  isDel  Boolean @default(false)
  isVerf Boolean @default(false)

  roleId Int?
  role   Role? @relation(fields: [roleId], references: [id])

  crAt DateTime @default(now())

  otps  OTP[] // <-- ADD THIS LINE
  Event Event[]
}

model OTP {
  id    Int    @id @default(autoincrement())
  idnty String @unique @default(uuid())

  email   String
  code    String
  purpose String

  expAt DateTime
  crAt  DateTime @default(now())

  userId Int?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  orgId Int?
  org   Org? @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model Event {
  id         Int  @id @default(autoincrement())
  org_id     Int
  created_by Int? // NULL allowed

  title        String
  slug         String?
  description  String?
  banner_image String?
  venue_name   String?
  mode         String?
  event_date   String?
  event_time   String?
  venue        String?

  published_at DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  org    Org   @relation(fields: [org_id], references: [id])
  User   User? @relation(fields: [userId], references: [id])
  userId Int?
}
